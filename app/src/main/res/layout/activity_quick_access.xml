<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuickAccessActivity"
    android:padding="8dp"
    android:background="@color/color2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_gps"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_oval_sec_top"
        android:elevation="4dp"
        app:title=" "
        app:titleTextColor="#DEDEDE"
        >

        <!-- Geri düğmesi -->
        <ImageButton
            android:id="@+id/toolbarBackButton_QuickAccess"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:contentDescription="Back"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/arrow_back" />
        <TextView
            android:id="@+id/toolbarTitle_QuickAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:text="Hızlı Erişim"
            android:textColor="#DEDEDE"
            android:textSize="19sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/volkan_btn_ebys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EBYS"
                android:backgroundTint="@color/secondary" />
            <Button
                android:id="@+id/volkan_btn_office365"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OFFICE 365"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ÖĞRENCİ BİLGİ SİSTEMİ"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_takvim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AKADEMİK TAKVİM"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_haruzem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HARUZEM"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_urfaEvi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="URFA EVİ"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_sss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SSS"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_yemek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YEMEK LİSTESİ"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_telefonRehberi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TELEFON REHBERİ"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_etkinlikTakvimi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ETKİNLİK TAKVİMİ"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_kalite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KALİTE KOORDİNATÖRLÜĞÜ"
                android:backgroundTint="@color/secondary"/>
            <Button
                android:id="@+id/volkan_btn_akts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AKADEMİK KADRO TALEP SİSTEMİ"
                android:backgroundTint="@color/secondary"/>
        </LinearLayout>
    </HorizontalScrollView>

    <WebView
        android:id="@+id/webview_web"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp"
        android:backgroundTint="@color/primary"/>

    <Button
        android:id="@+id/volkan_btn_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TARAYICIDA AÇ"/>
</LinearLayout>